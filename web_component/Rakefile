task :default => :s

task :s => "server"
desc "[s] server"
task :server do
  system <<~EOT
  vue-cli-service serve --port 3995 --open
  EOT
end

task :b => "build"
desc "[b] build"
task :build do
  system <<~EOT
  NODE_ENV=development vue-cli-service build --dest labo/shogi-player-wc/dist --inline-vue --target wc --name shogi-player-wc src/components/ShogiPlayerWcRoot.vue
  open labo/shogi-player-wc/index.html
  EOT
end

task :m => "my_tag"
desc "[m] my_tag"
task :my_tag do
  system <<~EOT
  NODE_ENV=development vue-cli-service build --dest labo/my-tag/dist --inline-vue --target wc --name my-tag src/components/MyTag.vue
  open labo/my-tag/index.html
  EOT
end
